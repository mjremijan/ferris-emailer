    <appender name="FILE" class="org.ferris.emailer.logger.RollingFileAppender">
        <append>true</append>
        <immediateFlush>true</immediateFlush>
        <rollingPolicy class="org.ferris.emailer.logger.TimeBasedRollingPolicy">
             keep 6 months worth of history 
            <maxHistory>6</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
             %date{yyyy-MM-dd HH:mm:ss}  %class{0}.M(): %msg%n 
            <pattern>%date{yyyy-MM-dd HH:mm:ss} [%thread] [%-5level] %class{0}.%M\(\): %msg%n</pattern>            
        </encoder>
    </appender>

    <logger name="org.ferris.emailer" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>